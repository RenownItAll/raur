# Maintainer: Renowned <64113367+RenownItAll@users.noreply.github.com>
pkgname=termshot-bin
pkgver=0.6.0
pkgrel=1
pkgdesc="Creates screenshots from terminal command output"
arch=('x86_64' 'aarch64')
url="https://www.github.com/homeport/termshot"
license=('MIT')
depends=('glibc')
provides=('termshot')
conflicts=('termshot')

case "$CARCH" in
x86_64) _bin_arch="amd64" ;;
aarch64) _bin_arch="arm64" ;;
esac

source_x86_64=("${pkgname}-${pkgver}-x86_64.tar.gz::${url}/releases/download/v${pkgver}/termshot_${pkgver}_linux_amd64.tar.gz")
source_aarch64=("${pkgname}-${pkgver}-aarch64.tar.gz::${url}/releases/download/v${pkgver}/termshot_${pkgver}_linux_arm64.tar.gz")

sha256sums_x86_64=('d40d65d6088167388ce78d6427fe18dc935b4d4732f284c4213cb0f1f076452e')
sha256sums_aarch64=('46501930b0824dffd0ca3172fed744f3c7a41037590723a0f013d9579d43aa0c')

package() {
  install -Dm755 "${srcdir}/termshot" "${pkgdir}/usr/bin/termshot"
  install -Dm644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
  install -Dm644 "${srcdir}/README.md" "${pkgdir}/usr/share/doc/${pkgname}/README.md"
}
